/* pages/financial/fdetail/fdetail.wxss */

.m-head swiper {
  height: 200px;
}

.m-head image {
  width: 100%;
  height: 100%;
}
.m-container {
  padding: 20rpx 10rpx;
  margin-bottom: 60px;
  background-color: #fff;
}
.detail-title {
  padding: 10rpx 20rpx;
  font-size: 17px;
}
.txt {
  text-indent: 2em;
}
.detail-wrap .text {
  padding:20rpx 0 20rpx 20rpx;
  font-size: 12px;
  color: #888;
}
.items {
  /* border-bottom: 1px solid #000; */
}
.item {
  display: flex;
  justify-content: space-between;
  vertical-align: center;
  border-left: 1px solid #000;
  border-right: 1px solid #000;
  border-top: 1px solid #000;
  font-size: 12px;
}
.item:last-child {
  border-bottom: 1px solid #000;
}
.item-title {
  padding: 5px 0;
  width: 30%;
  border-right: 1px solid #000;
  text-align: center;
}
.item-con {
  padding: 5px 0;
  width: 70%;
  text-align: center;
}
.footer {
  z-index: 99;
  position: fixed;
  bottom: 0;
  padding: 20rpx 0;
  width: 100%;
  border-top: 1px solid #eee;
  background-color: #fff;
}

.footer-btn {
  padding: 10rpx 0;
  margin: 0 auto;
  width: 80%;
  text-align: center;
  border-radius: 10rpx;
  background-color: #3f76da;
  color: #fff;
  font-size: 17px;
}
