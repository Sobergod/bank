/* pages/metal/metal.wxss */
.m-head swiper {
  height: 200px;
}
.m-head image{
  width: 100%;
  height: 100%;
}
.m-container {
  padding: 20rpx 40rpx;
}
.bg-item {
  position: relative;
  margin-bottom: 20rpx;
  height: 80px;
  border-radius: 10px;
}
.bg-item image {
  width: 100%;
  height: 100%;
}
.item {
  z-index: 2;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
  width: 100%;
  height: 100%;
  color: #fff;
}
.left {
  display: flex;
  align-items: center;
}
.fimg {
  width: 90px;
  height: 60px;
}
.btn {
  position: absolute;
  right: 30px;
  bottom: 0;
  padding: 5rpx 10rpx;
  margin-bottom: 20rpx;
  font-size: 10px;
  color: #666;
  border-radius: 20px;
  box-shadow: 2px 1px 3px #888;
  background-color: #fff;
}
.footer {
  text-align: center;
  font-size: 12px;
  color: #666;
}