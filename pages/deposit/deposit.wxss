/* pages/deposit/deposit.wxss */
.m-head swiper {
  height: 200px;
}
.m-head image{
  width: 100%;
  height: 100%;
}
.m-container {
  padding: 20rpx 10rpx;
  font-size: 14px;
}
.item {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  margin-bottom: 40rpx;
  border-radius: 10px;
  box-shadow: 2px 3px 5px #888;
  background-color: #fff;
}
.item .ad-img {
  width: 70%;
}
.item .ad-img image {
  width: 100%;
  height: 60px;
}
.item-con {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.con-title {
  font-size: 17px;
  color: #3F76DA;
}
.con-btn {
  padding: 5rpx 10rpx;
  border-radius: 20px;
  color: #888;
  background-color: #eee;
  font-size: 10px;
}